                        {% else %}
                            
                                <a href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity.id }) }}" }}"><span class="glyphicon glyphicon-eye-open"></span>{{ action }}</a>
                        
