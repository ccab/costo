{% extends 'base2.html.twig' %}

{% block title %}Adicionar Dieta{% endblock %}

{% block page_title %}Adicionar Dieta{% endblock %}

{% block stylesheets_page %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/select2/select2.css')}}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/select2/select2-metronic.css')}}"/>
    
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/bootstrap-datepicker/css/datepicker.css')}}"/>
{% endblock %}

{% block body -%}
    <div class="portlet box green ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i> Adicionar Dieta
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form) }}

            <div class="form-body">

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.numero) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.numeroReembolso) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.diasEstimado) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.diasReal) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.fechaPago, {'attr':{'class':'input-large date-picker'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.fechaSalida, {'attr':{'class':'input-large date-picker'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.fechaRegresoReal, {'attr':{'class':'input-large date-picker'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.fechaLiquidado, {'attr':{'class':'input-large date-picker'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.importeAnticipo) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.importeEntregado) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.importeDevuelto) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.observaciones) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.nombreBeneficiario, {'attr':{'class':'input-large select2-input'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.areaBeneficiario) }}
                    </div>
                </div>

                <div class="form-actions fluid">
                    <div class="pull-right">
                        <button type="submit" class="btn green">
                            <i class="fa fa-check"></i> Aceptar
                        </button>
                        <a href="{{ path('dieta') }}" class="btn btn-danger" role="button">
                            <i class="fa fa-list"></i> Cancelar
                        </a>
                    </div>
                </div>

            </div>



            {{ form_end(form) }}


        </div>
    </div>

    <div class="testing"></div>
{% endblock %}


{% block javascripts_page_plugins %}
    <script src="{{ asset('assets/plugins/select2/select2.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/plugins/select2/select2_locale_es.js') }}" type="text/javascript"></script>
    
    <script src="{{ asset('assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('assets/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.es.js') }}" type="text/javascript"></script> 
{% endblock %}
    
{% block javascripts_page_scripts %}
    <script src="{{ asset('assets/scripts/custom/components-pickers.js') }}" type="text/javascript"></script>
 {% endblock %}
 
  
{% block javascripts_custom_scripts %}
    <script type="text/javascript">
        $('.date-picker').datepicker({
                rtl: App.isRTL(),
                autoclose: true,
                format: 'dd/mm/yyyy',
                language: 'es'
            });
            
        $('.select2-input').select2({
                language: 'es'
            });
        
        $(document).ready(function() {
            
            
        });

        {#        $.getJSON("http://localhost/costo/web/app_dev.php/admin/dieta/getAllUsers", function(json) {
                    alert(json.users.length);
                });#}

        $.getJSON({{ path('allu') }}, function(data) {
            var items = [];
            $.each(data.users, function(key, val) {
                items.push("<li id='" + key + "'>" + val + "</li>");
            });

            $("<ul/>", {
                "class": "my-new-list",
                html: items.join("")
            }).appendTo(".testing");
        });
    </script>

{% endblock %}