{% extends 'base2.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body -%}
    {{ include('FichaWizard/wizardSteps.html.twig', {'active': 1}) }}
    
    <h3>Entidad</h3>

    {{ form_start(form) }}
    
        {{ form_row(form.nombre) }}
        {{ form_row(form.direccion, {'label' : 'Dirección'}) }}
        {{ form_row(form.reeup, {'label' : 'REEUP'}) }}
        {{ form_row(form.nit, {'label' : 'No. de Identificación Tributaria(NIT)'}) }}
        {{ form_row(form.ministerio) }}
        {{ form_row(form.tipoempresa, {'label' : 'Tipo de Empresa'}) }}
        {{ form_row(form.regComercial, {'label' : 'No. Insc. Registro Comercial'}) }}
        {{ form_row(form.regMercantil, {'label' : 'No. Insc. Registro Mercantil'}) }}
        {{ form_row(form.licDivisas, {'label' : 'No. Licencia Operar en Divisas'}) }}
        
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary btn" value="Aceptar">
                
                <a href="{{ path('ficha_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>
                                                                    
                <a href="{{ path('ficha') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
            </div>
        </div>
        
    {{ form_end(form) }}
{% endblock %}
