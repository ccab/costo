            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombreelabora</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nombreElabora is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nombreElabora }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Fechaelaboracion</label>
            <div class="col-sm-10">
                <div class="form-control string">
                    {{ entity.fechaElaboracion|date('Y-m-d H:i:s') }}
