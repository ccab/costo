            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nit is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nit }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Registro Comercial</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.regComercial is null %}
