{% extends 'base2.html.twig' %}

{% block body -%}
    <h3>Ficha</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nombre is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nombre }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Direccion</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.direccion is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.direccion }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">REEUP</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.reeup is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.reeup }}
                    {% endif %}
                </div>
            </div>              
        </div>    
