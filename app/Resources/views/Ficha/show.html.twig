            <label class="col-sm-2 control-label">Fechacreacion</label>
            <div class="col-sm-10">
                <div class="form-control string">
                    {{ entity.fechaCreacion|date('Y-m-d H:i:s') }}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{#{ path('ficha_entidad', { 'id': entity.id }) }#}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{#{ path('ficha_delete', { 'id': entity.id }) }#}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('ficha') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
