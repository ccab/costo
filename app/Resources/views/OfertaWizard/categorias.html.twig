{% extends 'base2.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/wizard-steps.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
    {{ include('OfertaWizard/wizardSteps.html.twig', {'active': 3}) }}

    <h3>Categorias</h3>
    
    {{ form_start(form) }}

    {{ form_row(form.numero) }}
    {{ form_row(form.vigencia) }}
    {{ form_row(form.categorias, {'attr' : {'size' : '10'}}) }}

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <a href="{{ path('oferta_procesos', { 'id': entity.id }) }}" class="btn btn-primary" role="button">
                <span class="glyphicon glyphicon-chevron-left"></span> Anterior
            </a>
            <button type="submit" class="btn btn-primary">
                Siguiente <span class="glyphicon glyphicon-chevron-right"></span>
            </button>
            <a href="{{ path('oferta') }}" class="btn btn-info" role="button">
                <span class="glyphicon glyphicon-list"></span> Listado
            </a>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
