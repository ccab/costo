{% extends 'base2.html.twig' %}

{% block body -%}
    <h3>Oferta</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Vigencia</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.vigencia is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.vigencia }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Numero</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.numero is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.numero }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
 
                <a href="{#{ path('costo_oferta_default_add', { 'id': entity.id }) }#}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{#{ path('oferta_delete', { 'id': entity.id }) }#}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('oferta') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
