{% extends 'base2.html.twig' %}

    {% block body -%}
        <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Anticipo para Dietas
            </div>
            <!-- <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div> -->
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Contrato</th>
                            <th>Proyecto</th>
                            <th>Dias</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            {% if entity.contrato is null %}
                                <td><span class="label label-default">NULL</span></td>
                            {% else %}
                                <td>{{ entity.contrato }}</td>
                            {% endif %}
                            {% if entity.proyecto is null %}
                                <td><span class="label label-default">NULL</span></td>
                            {% else %}
                                <td>{{ entity.proyecto }}</td>
                            {% endif %}
                            {% if entity.dias is null %}
                                <td><span class="label label-default">NULL</span></td>
                            {% else %}
                                <td>{{ entity.dias }}</td>
                            {% endif %}                
                            <td>                         
                            
                                <a href="{{ path('contratodieta_show', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-eye-open"></span> Ver</a>
                        
                                                                            
                                <a href="{{ path('contratodieta_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-edit"></span> Modificar</a>
                        
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->

    {% endblock %}
