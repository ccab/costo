{% extends '::base.html.twig' %}
{% block body %}
    {% if entities is defined %}
      <table>
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Area</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Activo</th>
                    </tr>
                </thead>
                <tbody>
            {% for entity in entities %}   
               <tr class="{{ cycle(['odd', 'even'], loop.index)}}">
                    <td>{{ entity.fullName }}</td>
                    <td>{{ entity.area.getNombre() }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                     {% for role in entity.roles %} 
                         {{ role.name }}
                     {% endfor %}
                     </td>
                     {% if entity.enabled %}     
                         <td>SI</td>
                     {% endif %}
                     {% if entity.enabled == false %}     
                         <td>NO</td>
                     {% endif %}
               </tr>
        {% endfor %}
                </tbody>
              </table>
    {% else %}
        No hay entidades que mostrar
    {% endif %}
{% endblock %}