{% extends '::base.html.twig' %}

{% block body -%}
    <h3>material</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Codigo</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.codigo is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.codigo }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Unidad_medida</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.unidadmedida is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.unidadmedida }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Fabricante</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.fabricante is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.fabricante }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Descripcion</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.descripcion is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.descripcion }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Precio_10_porciento</label>        
            <div class="col-sm-10">
                <div class="form-control boolean">
            {% if entity.precio10porciento is null %}
                    <span class="label label-default">NULL</span>
            {% elseif entity.precio10porciento%}
                    <span class="label label-success">SI</span>
            {% else %}
                    <span class="label label-danger">NO</span>
            {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Cantidad_inventario</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.cantidadinventario is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.cantidadinventario }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Cantidad_compra</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.cantidadcompra is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.cantidadcompra }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Cantidad_contrato</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.cantidadcontrato is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.cantidadcontrato }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Cantidad_oferta</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.cantidadoferta is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.cantidadoferta }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Cantidad_disponible</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.cantidaddisponible is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.cantidaddisponible }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('material_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('material_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('material') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
