{% extends '::base.html.twig' %}

{% block body -%}
    <h3>moneda</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre_moneda</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nombremoneda is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nombremoneda }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Abreviatura</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.abreviatura is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.abreviatura }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('moneda_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('moneda_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('moneda') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
