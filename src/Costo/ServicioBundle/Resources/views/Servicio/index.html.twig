{% extends '::base.html.twig' %}

    {% block body -%}
        <div id="content-header" class="col-sm-12">
            <div class="row">
                
                <div class="col-xs-12 col-sm-9">
                    <h3>Servicio</h3>
                </div>
        
                <div class="col-xs-12 col-sm-3">
                    <div id="content-actions">
                        <a href="{{ path('servicio_new') }}" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-file"></span> Adicionar Servicio
                        </a>
                    </div>
                </div>
                
            </div>
        </div>
        
        <!-- Problemas con Firefox 
        <div class="table-responsive">
        -->

            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th rowspan="2">Nombre</th>
                        <th rowspan="2">Codigo</th>
                        <th rowspan="2">Unidad</th>
                        <th rowspan="2">Salario</th>
                        <th colspan="2">Precio Unitario</th>
                        <th colspan="2">Depreciacion</th>
                        <th colspan="2">Alojamiento</th>
                        <th colspan="2">Dieta</th>
                        <th colspan="2">Materias P</th>
                        <th colspan="2">Portadores</th>
                        <th colspan="2">Arrendamiento</th>
                        <th rowspan="2">Accion</th>
                    </tr>
                    <tr>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                        <th>CUC</th>
                        <th>CUP</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        {% if entity.nombre is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.nombre }}</td>
                        {% endif %}
                        {% if entity.codigo is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.codigo }}</td>
                        {% endif %}
                        {% if entity.unidad is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.unidad }}</td>
                        {% endif %}
                        {% if entity.salario is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.salario }}</td>
                        {% endif %}
                        {% if entity.preciounitcuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.preciounitcuc }}</td>
                        {% endif %}
                        {% if entity.preciounitcup is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.preciounitcup }}</td>
                        {% endif %}
                        {% if entity.depreccuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.depreccuc }}</td>
                        {% endif %}
                        {% if entity.depreccup is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.depreccup }}</td>
                        {% endif %}
                        {% if entity.alojamientocuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.alojamientocuc }}</td>
                        {% endif %}
                        {% if entity.alojamientocup is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.alojamientocup }}</td>
                        {% endif %}
                        {% if entity.dietacuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.dietacuc }}</td>
                        {% endif %}
                        {% if entity.dietacup is null %}
