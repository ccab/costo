                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.matprimcup }}</td>
                        {% endif %}
                        {% if entity.portadorescuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.portadorescuc }}</td>
                        {% endif %}
                        {% if entity.portadorescup is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.portadorescup }}</td>
                        {% endif %}
                        {% if entity.arrendcuc is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.arrendcuc }}</td>
                        {% endif %}
                        {% if entity.arrendcup is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.arrendcup }}</td>
                        {% endif %}                
                            <td>                         
                            
                                <a href="{{ path('servicio_show', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-eye-open"></span> Ver</a>
                        
                                                                            
                                <a href="{{ path('servicio_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-edit"></span> Modificar</a>
                        
                            </td>

