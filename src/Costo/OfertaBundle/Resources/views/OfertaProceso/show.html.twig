{% extends '::base.html.twig' %}

{% block body -%}
    <h3>OfertaProceso</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Principal</label>        
            <div class="col-sm-10">
                <div class="form-control boolean">
            {% if entity.principal is null %}
                    <span class="label label-default">NULL</span>
            {% elseif entity.principal%}
                    <span class="label label-success">SI</span>
            {% else %}
                    <span class="label label-danger">NO</span>
            {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('oferta_proceso_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('oferta_proceso_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('oferta_proceso') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
