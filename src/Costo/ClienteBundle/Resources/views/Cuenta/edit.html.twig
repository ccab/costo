{% extends '::base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body -%}
    <h3>Modificar Cuenta</h3>

    {{ form_start(form) }}
    
        {{ form_widget(form) }}
        
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary btn" value="Aceptar">
                
                                                        
                <a href="{{ path('cuenta_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('cuenta') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
            </div>
        </div>
        
    {{ form_end(form) }}

{% endblock %}
