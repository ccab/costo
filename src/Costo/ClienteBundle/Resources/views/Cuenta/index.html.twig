{% extends '::base.html.twig' %}

    {% block body -%}
        <div id="content-header" class="col-sm-12">
            <div class="row">
                
                <div class="col-xs-12 col-sm-9">
                    <h3>Cuenta</h3>
                </div>
        
                <div class="col-xs-12 col-sm-3">
                    <div id="content-actions">
                        <a href="{{ path('cuenta_new') }}" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-file"></span> Adicionar Cuenta
                        </a>
                    </div>
                </div>
                
            </div>
        </div>
        
        <!-- Problemas con Firefox 
        <div class="table-responsive">
        -->

            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Numero</th>
                        <th>Banco</th>
                        <th>Direccion</th>
                        <th>Ficha</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        {% if entity.tipo is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.tipo.tipo }}</td>
                        {% endif %}
                        {% if entity.numero is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.numero }}</td>
                        {% endif %}
                        {% if entity.banco is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.banco }}</td>
                        {% endif %}
                        {% if entity.direccion is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.direccion }}</td>
                        {% endif %} 
                        {% if entity.ficha is null %}
                            <td><span class="label label-default">NULL</span></td>
                        {% else %}
                            <td>{{ entity.ficha.nombre }}</td>
                        {% endif %} 
                            <td>                         
                            
                                <a href="{{ path('cuenta_show', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-eye-open"></span> Ver</a>
                        
                                                                            
                                <a href="{{ path('cuenta_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-edit"></span> Modificar</a>
                        
                            </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>

        <!-- Problemas con Firefox
        </div>
        -->
        
    {% endblock %}
