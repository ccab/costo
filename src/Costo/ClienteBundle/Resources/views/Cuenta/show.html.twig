{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Cuenta</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Numero</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.numero is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.numero }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Banco</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.banco is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.banco }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Direccion</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.direccion is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.direccion }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('cuenta_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('cuenta_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('cuenta') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
