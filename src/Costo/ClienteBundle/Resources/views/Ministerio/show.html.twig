{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Ministerio</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nombre is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nombre }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Telefono</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.telefono is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.telefono }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Direccion</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.direccion is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.direccion }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Ministro</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.ministro is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.ministro }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('ministerio_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('ministerio_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('ministerio') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
