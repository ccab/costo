{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Autorizado</h3>
    
    <div class="form-horizontal">    
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.nombre is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.nombre }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Ci</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.ci is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.ci }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Observacion</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.observacion is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.observacion }}
                    {% endif %}
                </div>
            </div>              
        </div>    
        <div class="form-group">
            <label class="col-sm-2 control-label">Area</label>            
            <div class="col-sm-10">
                <div class="form-control string">
                    {% if entity.area is null %}
                        <span class="label label-default">NULL</span>
                    {% else %}
                        {{ entity.area }}
                    {% endif %}
                </div>
            </div>              
        </div>    
    </div>
    
                    
                <a href="{{ path('autorizado_edit', { 'id': entity.id }) }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit"></span> Modificar</a>

                        
                <a href="{{ path('autorizado_delete', { 'id': entity.id }) }}" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash"></span> Eliminar</a>

                        
                <a href="{{ path('autorizado') }}" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-list"></span> Listado</a>
{% endblock %}
